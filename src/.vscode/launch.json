{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Pacman Debug",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p ${workspaceFolder}/src/build/Debug && g++ -g ${workspaceFolder}/src/*.cpp -o ${workspaceFolder}/src/build/Debug/outDebug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile all C++ files to outDebug"
    }
  ]
}
